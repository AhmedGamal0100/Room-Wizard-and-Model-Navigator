<Window
    x:Class="Solution4.Views.ModelNavigatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Solution4.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Model Navigator"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Solution4;component/Styles/ModelNavigatorDict.xaml" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CheckBox Content="Check All Categories" IsChecked="{Binding IsAllCateogriesChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ListBox
            Grid.Row="1"
            Grid.Column="0"
            BorderBrush="Silver"
            BorderThickness="1"
            ItemsSource="{Binding CategoriesBind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedCategoryBind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Path=Name}" IsChecked="{Binding Path=IsChecked}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Silver" />
        <ItemsControl
            Grid.Row="1"
            Grid.Column="2"
            BorderBrush="Silver"
            BorderThickness="1"
            ItemsSource="{Binding ElementTypesBind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Margin="4"
                        Content="{Binding Path=Name}"
                        IsChecked="{Binding Path=IsChecked}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <GridSplitter
            Grid.Row="1"
            Grid.Column="3"
            Width="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Silver" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Foreground="#FF22708A"
            Text="Controls" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="5"
            Margin="10">
            <Button
                Margin="0,5,0,5"
                Command="{Binding SelectCommand}"
                Foreground="white">
                <DockPanel>
                    <materialDesign:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="Select" />
                    <TextBlock Text="Select" />
                </DockPanel>
            </Button>
            <Button
                Margin="0,5,0,5"
                Command="{Binding IsolateCommand}"
                Foreground="white">
                <DockPanel>
                    <materialDesign:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="Eye" />
                    <TextBlock Text="Isolate" />
                </DockPanel>
            </Button>
            <Button
                Margin="0,5,0,5"
                Command="{Binding HideCommand}"
                Foreground="white">
                <DockPanel>
                    <materialDesign:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="Hide" />
                    <TextBlock Text="Hide" />
                </DockPanel>
            </Button>
            <Button
                Margin="0,5,0,5"
                Command="{Binding DeleteCommand}"
                Foreground="white">
                <DockPanel>
                    <materialDesign:PackIcon
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="Delete" />
                    <TextBlock Text="Delete" />
                </DockPanel>
            </Button>

            <DockPanel Margin="0,5,0,5">
                <Button
                    Height="100"
                    Margin="0,5,15,5"
                    Command="{Binding OverrideCommand}"
                    Foreground="white">
                    <DockPanel>
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Color" />
                        <TextBlock Text="Override" />
                    </DockPanel>
                </Button>
                <materialDesign:ColorPicker
                    x:Name="colorBick"
                    Height="100"
                    Color="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </StackPanel>

    </Grid>
</Window>
